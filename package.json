{
  "name": "js-learner",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "test": "node ./exercises/runner.js",
    "test:jest": "jest --config jest.config.cjs --color",
    "test:all": "npm run test && npm run test:jest",
    "test:coverage": "jest --config jest.config.cjs --coverage --color",
    "ci": "npm run lint && npm run test:coverage && npm run test:all",
  "integration": "node ./integration/cli.js",
  "lint": "eslint . --ext .js",
  "rename:exercises": "node ./scripts/rename-exercises.js",
  "progress": "node ./scripts/progress.js"
  },
  "devDependencies": {
    "eslint": "^9.34.0",
    "jest": "^29.6.1",
    "jsdom": "^21.1.2",
    "sinon": "^15.2.0"
  }
}
